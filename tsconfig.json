{
  "compilerOptions": {
	  "target": "es6",
	  "module": "commonjs",
	  "experimentalDecorators": true,
	  "noImplicitAny": true,
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true,
	  "strictFunctionTypes": true,
	  "strictNullChecks": true,
	  "sourceMap": true,
	  "noUnusedParameters": true,
	  "noEmit": true
  },
  "exclude": [
	  "node_modules/**/*"
  ],
  "include": [
		"index.d.ts",
		"tests"
  ]
}