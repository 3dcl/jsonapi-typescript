{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"noImplicitAny": true,
		"lib": [
			"es2015"
		],
		"noImplicitThis": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"noUnusedParameters": true,
		"noEmitOnError": true,
		"noEmit": true
	},
	"exclude": [
		"node_modules/**/*",
		"test/**/*"
	],
	"include": [
		"index.ts"
	]
}