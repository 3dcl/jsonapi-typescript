{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "lib": [
      "es2015"
    ],
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noEmit": true
  },
  "exclude": [
    "..node_modules/**/*",
    "helpers.ts",
    "**/*test.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}